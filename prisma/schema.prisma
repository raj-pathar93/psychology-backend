// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

/* ======================
   MODELS
====================== */

model Contact {
  id        String   @id @default(uuid())
  name      String
  email     String
  mobile    String
  message   String
  createdAt DateTime @default(now())
}

model Appointment {
  id            String   @id @default(uuid())
  name          String
  email         String
  phone         String
  preferredDate String
  preferredTime String
  message       String?
  createdAt     DateTime @default(now())
}
